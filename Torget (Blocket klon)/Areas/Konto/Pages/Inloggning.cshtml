@page
@model Torget__Blocket_klon_.Areas.Konto.Pages.InloggningModel
@{
    ViewData["Title"] = "Logga in";
}

<div class="container d-flex justify-content-center flex-column w-75 mb-5" style="max-width: 800px;">
<h2 class="display-4 text-center mt-5 mb-3">Logga in</h2>
    <form class="d-flex flex-column mb-3" method="post">
        <div class="d-flex flex-row align-items-center mb-4">
            <div class="form-floating flex-fill mb-0">
                <input class="form-control flex-fill mb-0" asp-for="Input.Email" placeholder="Email"/>
                <label class="form-label" asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email"></span>
            </div>
        </div>
    
   
        <div class="d-flex flex-row align-items-center mb-4">
            <div class="form-floating flex-fill mb-0">
                <input class="form-control flex-fill mb-0" asp-for="Input.Password" placeholder="Lösenord"/>
                <label class="form-label" asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password"></span>
            </div>
        </div>
        <div class="list-group" asp-validation-summary="All"></div>
        <div class="d-flex justify-content-center">
            <button class="button p-2 text-black fw-bold border-0 mb-5 px-3" type="submit">Logga in</button>
        </div>
    </form>
<div class="d-flex justify-content-center">
    <a asp-area="Konto" asp-page="/Registrera" class="button p-2 text-black fw-bold border-0 mb-5 px-3">
        Registrera
    </a>
</div>
</div>
